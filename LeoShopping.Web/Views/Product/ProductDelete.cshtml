@model ProductModel

<form asp-action="ProductDelete">
    <br />
    <div class="container border p-3">
        <input asp-for="Id" hidden />
        <h1 class="text-primary">Editar Produto</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size: 20px;">Nome</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size: 20px;">Categoria</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size: 20px;">Descrição</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled class="form-control" rows="4"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3"> 
                <input asp-for="ImageURL" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size: 20px;">Preço</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Excluir" class="btn btn-danger form-control" />
            </div>

        </div>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
